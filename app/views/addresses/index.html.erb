<div class="container my-5">
	<div class="row">
    <div class="offset-1">
		  <h2 class=" px-3 pb-1 bg-light">配送先登録/一覧</h2>
    </div>
	</div>


<div class="container my-5">
<%= form_with model: @address_new, local: true do |f| %>

        <div class="form-group row ">
       <div class="col-lg-3"> <%= f.label :"郵便番号(ハイフンなし)", class: "" %></div>
       <div class="col-lg-3">	<%= f.text_field :postal_code, class: "form-control border border-dark", placeholder: "郵便番号" %></div>
        </div>

        <div class="form-group row">
        <div class="col-lg-3">  <%= f.label :"住所", class: "" %></div>
      	<div class="col-lg-6">	<%= f.text_field :address, class: "form-control border border-dark", placeholder: "住所" %></div>
        </div>

        <div class="form-group row">
         <div class="col-lg-3">	<%= f.label :"宛名", class: "" %></div>
      	 <div class="col-lg-3">	<%= f.text_field :name, class: "form-control border border-dark", placeholder: "宛名" %></div>

    		  <%= f.submit "新規登録", class: "btn btn-primary btn-success mx-auto" %>
        </div>
    	<% end %>
    </div>
    </div>

 <div class="row ml-3">
    <div class=" col-lg-8">
    <table class="table table-border border-dark table-hover">
      <thead>
       <tr class="col-lg-2 border border-dark">
         <th class="border border-dark bg-light">郵便番号</th>
         <th class="border border-dark bg-light">住所</th>
         <th class="border border-dark bg-light">宛名</th>
         <th class="border border-dark bg-light"></th>
       <tr>
      </thead>

     <tbody>
    <% @addresses.each do |address| %>
    <tr class="border border  border-dark">
     	<td class="border border-dark bg-light"><%= address.postal_code %></td>
     	<td class="border border-dark bg-light"><%= address.address %></td>
     	<td class="border border-dark bg-light"><%= address.name %></td>
     	<td class="border border-dark bg-light"><%= link_to "編集する", edit_address_path(address),  class: "btn btn-sm btn-success" %>
          <%= link_to "削除する", address_path(address), method: :delete ,data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
        </td>
     </tr>
  <% end %>
     </tbody>
    </table>
  </tr>
</tr>
</thead>
</table>
</div>
</div>
	</div>
   </div>
