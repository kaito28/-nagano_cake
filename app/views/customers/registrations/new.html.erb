<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
      <h2 class="red-border px-3">新規会員登録</h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-4 col-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>




      <div class="form-group">
        <%= f.label :名前, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :last_name, placeholder:"姓 例）令和", class: "form-control offset-1 col-5" %>
          <%= f.text_field :first_name, placeholder:"名 例）道子", class: "form-control offset-1 col-5" %>
        </div>

          <%= f.label :フリガナ, class: "brown-border px-3" %>
        <div class="row">

          <%= f.text_field :last_name_kana, placeholder:"セイ 例）レイワ", class: "form-control offset-1 col-5" %>
          <%= f.text_field :first_name_kana, placeholder:"メイ 例）ミチコ", class: "form-control offset-1 col-5" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号, class: "brown-border px-3" %>
        <%= f.text_field :postal_code, placeholder:"例）0000000", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :住所, class: "brown-border px-3" %>
        <%= f.text_field :address, class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :電話番号, class: "brown-border px-3" %>
        <%= f.text_field :telephone_number, placeholder:"例）00000000", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例）example@mail", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: "brown-border px-3" %>
        <%= f.password_field :password, placeholder:"最低６文字必要です。", autocomplete: "new-password", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード確認, class: "brown-border px-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control offset-1 col-11" %>
      </div>

      <div class="row">
        <%= f.submit "新規登録", class: "btn btn-lg btn-success mx-auto" %>
      </div>
    <% end %>

  </div>
</div>

  <div class="row">
    <div class="offset-9">

      <h2 class="red-border ml-3">既に登録済みの方</h2>
       <%= link_to "こちら", new_session_path(resource_name), class: "btn btn-sm " %> から新規登録を行ってください
    </div>
  </div>


</div>