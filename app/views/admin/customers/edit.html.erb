<div class="container my-5">
  <div class="row">
    <div class="offset">
      <h2 class="border px-3 pb-1 bg-light"><%=@customer.last_name + @customer.first_name%>さんの会員情報編集</h2>
    </div>
  </div>

    <div class="row mt-3">
     <div class="offset-3 col-6">

      <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, local: true do |f| %>

        <div class="form-group">
        <div class="row">
          <%= f.label :会員id, class: "col-sm-4" %>
          <%= f.label @customer.id, class: "col-sm-8" %>
        </div>
        </div>

          <div class="form-group">
        <%= f.label :氏名, class: " px-3" %>
        <div class="row">
          <%= f.text_field :last_name, class: "border border-dark form-control  col-4"%>
          <%= f.text_field :first_name, class: "border border-dark form-control offset-1 col-4"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :フリガナ, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :last_name_kana, class: "border border-dark form-control  col-4"%>
          <%= f.text_field :first_name_kana, class: "border border-dark form-control  offset-1 col-4"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号, class: "brown-border px-3" %>
        <%= f.text_field :postal_code, class: "border border-dark form-control offset-1 col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :住所, class: "brown-border px-3" %>
        <%= f.text_field :address, class: "border border-dark form-control offset-1 col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :電話番号, class: "brown-border px-3" %>
        <%= f.text_field :telephone_number, class: "border border-dark form-control offset-1 col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
        <%= f.email_field :email, class: "border border-dark form-control offset-1 col-8"%>
      </div>



        <div class="row">
          <%= f.label :会員ステータス, class: "ml-3" %>
          <div class="form-check ml-4">
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会" %>
          </div>
        </div>

        <div class="row">
          <%= f.submit "変更を保存", class: "btn btn-primary mt-3 mx-auto" %>
        </div>
  </div>
    <% end %>

</div>
</div>
</div>