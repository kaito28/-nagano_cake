<div class="container my-5">

  <div class="row">
    <h2>ジャンル追加・一覧</h2>
  </div>

  <div class="row mt-5">
    <div class="">
   <strong>ジャンル名</strong>
     </div>
<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <div class="col-lg-9">
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="col-lg-3">
          <%= f.submit "新規登録", class: "btn btn-success mt-3 mx-auto" %>
        </div>
      <% end %>
    </div>
    </div>

    <div class="offset-sm-1 col-sm-5">
      <table class="table table-hover text-center ">
        <thead>
          <tr class="bg-light">
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>

              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
  </div>
</div>