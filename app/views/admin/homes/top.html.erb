<div class="container my-5">
  <div class="row">
    <h2 class="bg-light">注文履歴一覧</h2>
  </div>

  <div class="row mt-5">
    <table class="table table-hover ">
      <thead>
        <tr>
          <th class="bg-light">購入日時</th>
          <th class="bg-light">購入者</th>
          <th class="bg-light">注文個数</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>

            <td><%= order.customer.last_name %>
              <%= order.customer.first_name %>

            </td>
            <td><%= order.order_details.sum(:amount) %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
 </div>


