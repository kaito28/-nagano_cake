<div class="container my-5">
  <div class="row">
    <h2>商品一覧画面</h2>
  </div>
  <div class="row text-right">
    <%= link_to "+", new_admin_item_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow-sm" %>
  </div>

  <div class="row mt-1">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th class="bg-light">商品ID</th>
          <th class="bg-light">商品名</th>
          <th class="bg-light">税抜き価格</th>
          <th class="bg-light">ジャンル</th>
          <th class="bg-light">ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_active==0 %>
         　<P class="">販売中</P>
         　<% else %>
         　販売停止中
　　　　　 <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<div class="container">
  <div class="row">
   <div class="col-md-4 offset-md-4 py-2  mt-5">
    <%= paginate @items %>
   </div>
  </div>
</div>

</div>
