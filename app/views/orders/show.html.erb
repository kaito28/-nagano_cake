<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class=" px-3">注文履歴詳細</h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-7">

      <div class="row">
        <strong class="px-3">注文情報</strong>
      </div>

      <div class="row mt-3">
        <table class="table table-border border-dark">
          <tbody>
            <tr class="border border-dark">
              <td class="col-3 border border-dark bg-light">注文日</td>
              <td class="border border-dark"><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>

            <tr class="border border-dark">
              <td class="border border-dark  bg-light">配送先</td>
              <td class="border border-dark">
                <%= "〒" + @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %><br>

              </td>

            </tr>

            <tr class="border border-dark">
              <td class="border border-dark  bg-light">支払い方法</td>
              <td class="border border-dark"><%= @order.payment_method%></td>
            </tr>

            <tr class="border border-dark">
              <td class="border border-dark bg-light">ステータス</td>
              <td class="border border-dark"><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>

    <div class="col-4">
      <div class="row">
        <strong class="px-3">請求情報</strong>
      </div>

      <div class="row mt-3">
        <table class="table table-border border-dark offset-1">
          <tbody>
            <tr class="border border-dark">
              <td class="border border-dark  bg-light">商品合計</td>
              <td class="border border-dark"><%= @order.total_payment  %></td>
            </tr>

            <tr class="border border-dark">
              <td class="border border-dark  bg-light">配送料</td>
              <td class="border border-dark"><%= @order.shipping_cost %></td>
            </tr>

            <tr class="border border-dark">
              <td class="border border-dark bg-light"><strong>ご請求額</strong></td>
              <td class="border border-dark"><%= @order.total_payment + @order.shipping_cost %></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>

  <div class="row mt-5">
    <div class="">
      <strong class="px-3">注文内容</strong>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-9">

      <table class="table table-border border-dark">
        <thead>
          <tr class="border border-dark">
            <th class="border border-dark bg-light">商品</th>
            <th class="border border-dark bg-light">単価(税込)</th>
            <th class="border border-dark bg-light">個数</th>
            <th class="border border-dark bg-light">小計</th>
          </tr>
        </thead>

        <% @order_details.each do |d| %>
        <tbody>
          <tr class="border border-dark">
            <td class="border border-dark"><%= d.item.name %></td>
            <td class="border border-dark"><%= (d.price * 1.1).floor %></td>
            <td class="border border-dark"><%= d.amount %></td>
            <td class="border border-dark"><%= ((d.price * d.amount) * 1.1).floor %></td>
          </tr>
        </tbody>
        <% end %>
      </table>

    </div>
  </div>

</div>
